{
  "name": "slash",
  "version": "0.2.0",
  "private": true,
  "main": "main.js",
  "description": "MINI-SEARCHBAR",
  "author": "Giovanni",
  "license": "MIT",
  "homepage": "https://github.com/gwetano/slash",
  "repository": {
    "type": "git",
    "url": "https://github.com/gwetano/slash.git"
  },

  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir", 
    "dist": "electron-builder",
    "publish": "electron-builder --publish=always"
  },

  "build": {
    "appId": "com.giovanni.slash",
    "productName": "slash",
    "asar": true,
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "style.css",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "gwetano",
      "repo": "slash"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.productivity",
      "icon": "icons/icon.icns" 
    },
    "win": {
      "target": ["nsis"],
      "icon": "icons/icon.ico"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "icons"
    }
  },

  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  }
}